<decorators defaultdir="/decorators">

	<excludes>
		<pattern>/40*</pattern>
		<pattern>/*ajax=true*</pattern>
		<pattern>/struts/dojo/*</pattern>
		<pattern>/resources/*</pattern>
		<pattern>/ueditor/*</pattern>
		<pattern>/static/*</pattern>
	</excludes>

	<decorator name="default" page="default.jsp">
		<pattern>/*</pattern>
	</decorator>

	<decorator name="admin" page="admin.jsp">
		<pattern>/admin/*</pattern>
	</decorator>
	
	<decorator name="user" page="user.jsp">
		<pattern>/user/*</pattern>
	</decorator>
	
	<decorator name="daoqun" page="daoqun.jsp">
		<pattern>/daoqun/*</pattern>
	</decorator>
	
	<decorator name="promisingpromos" page="promisingpromos.jsp">
		<pattern>/promisingpromos/*</pattern>
	</decorator>
	
</decorators>
